{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
